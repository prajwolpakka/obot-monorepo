############################
# AI Service Configuration #
############################

# HTTP bind
AI_HOST=0.0.0.0
AI_PORT=6002

#################
# Vector Store  #
#################
QDRANT_HOST=localhost
QDRANT_PORT=6333

################
# LLM Provider #
################
# Choose one of: openrouter | gemini | ollama
LLM_PROVIDER=openrouter

# OpenRouter (default)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=gpt-3.5-turbo
OPENROUTER_REFERRER=http://localhost
OPENROUTER_TITLE=obot

# Gemini (optional)
GOOGLE_API_KEY=
GOOGLE_API_KEY1=
GOOGLE_API_KEY2=
GOOGLE_API_KEY3=

# Ollama (optional)
# If using OllamaProvider directly, this env currently holds the base URL
# e.g. http://localhost:11434
LLAMA3_API_KEY=
# Alternatively, routes can use these to check health
OLLAMA_HOST=localhost
OLLAMA_PORT=11434

#########################
# Uploads and Documents #
#########################
UPLOAD_DIR=./uploads
# 10MB default (in bytes)
MAX_UPLOAD_SIZE=10485760
# comma-separated list
ALLOWED_EXTENSIONS=.pdf,.txt,.docx,.doc,.pptx,.xlsx,.xls,.md,.csv,.eml,.msg
