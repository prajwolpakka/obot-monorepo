# AI service (.env.example)

# Service host/port
AI_HOST=0.0.0.0
AI_PORT=4002

# OpenRouter (required)
OPENROUTER_API_KEY=sk-or-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Optional headers recommended by OpenRouter
OPENROUTER_SITE_URL=http://localhost:4002
OPENROUTER_APP_NAME=obot-ai

# Embeddings via OpenRouter
# Common choices (set EMBEDDINGS_MODEL and matching EMBEDDING_DIM):
# - openai/text-embedding-3-small  -> 1536
# - openai/text-embedding-3-large  -> 3072
# - jinaai/jina-embeddings-v2-base-en -> 1024
EMBEDDINGS_MODEL=openai/text-embedding-3-small
EMBEDDING_DIM=1536
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Qdrant configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=bot_documents

# Upload settings
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10 MB
ALLOWED_EXTENSIONS=.pdf,.txt,.docx,.doc,.pptx,.xlsx,.xls,.md,.csv,.eml,.msg

# Ollama (optional: only if you use provider=ollama)
# NOTE: current code reads LLAMA3_API_KEY for base URL; set it to Ollama base URL
# Example: http://localhost:11434
LLAMA3_API_KEY=http://localhost:11434

